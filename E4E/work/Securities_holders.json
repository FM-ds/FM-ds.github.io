{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
      "url": "https://raw.githubusercontent.com/RDeconomist/data/main/e4e5/US_securities_holders.csv"
    },
    "title": {
      "anchor": "start",
      "fontSize": 18,
      "subtitleFontSize": 12,
      "text": "Who Holds America's Debt?",
      "subtitle": [
        " Major Foreign Holders of US Treasury Securities",
        "Data: US Treasury"
      ]
    },
    "width": 300,
    "height": 400,
    "mark": {"type": "bar"},
    "encoding": {
      "y": {
        "field": "Country",
        "sort": {"op": "sum", "field": "yield"},
        "axis": {"title": null}
      },
      "x": {"aggregate": "sum", "field": "Value", "axis":{"title":null, "titleFontWeight":"normal", "format":"$.2s"}},
      "color": {
        "field": "Type",
        "legend": {
          "orient": "none",
          "columns": 2,
          "legendX": -90,
          "legendY": -20,
          "offset": 20,
          "title": null
        }
      },
      "tooltip": [
        {"field": "Country"},
        {"field": "Value", "title": "Amount", "format": "$3,"}
      ]
    },
    "transform": [
      {
        "filter": "datum.Type != 'Total' & datum.EU != 'Yes' & datum.Ranking_2 < 15"
      },
      {
        "calculate": "datum.Value * 1000000",
        "as" : "Value"
      }
    ]
  }