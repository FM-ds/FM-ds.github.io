{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
      "background": "white", "view": {"stroke": "transparent"},
      "concat": {"spacing": 0}
      
      },
    "data": {
        "url": "https://raw.githubusercontent.com/RDeconomist/data/main/e4e4/states_json/in.json",
        "format": {
            "type": "topojson",
            "feature": "counties"
        }
    },
      "concat" : [
              {
                "title":{
                  "fontSize": 10,
                  "text":"IN",
                  "fontWeight":"normal",
                  "orient":"bottom"
                },
                "height":110,
                "width":80,
                  "projection": {
                      "type": "mercator"
                  },
                  "mark": {
                      "type": "geoshape",
                      "fill": "lightgray",
                      "stroke": "white",
                      "strokeWidth": 0.1
                  },
                  "encoding": {
                      "tooltip": {
                          "field": "properties.name"
                      },
                      "fill":{
                        "condition":{
                          "test": "datum.properties.name == 'Lake' | datum.properties.name == 'Pocahontas' | datum.properties.name == 'Hudson' ",
                          "value": "rgb(136,0,0)"
                        },
                        "value": "rgb(225,225,225)",
                        "type": "nominal"
                      }
                  }
              }
          ]
  
  }