{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "repeat": {
    "row": ["Life Satisfaction (Normalised)", "Life Expectency (Normalised)", "Average Income (Normalised)", "Household Deprivation (Normalised)", "Foodbank Distance (Normalised)"],
    "column": ["Life Satisfaction (Normalised)", "Life Expectency (Normalised)", "Average Income (Normalised)", "Household Deprivation (Normalised)", "Foodbank Distance (Normalised)"]
  },
  "spec": {
    "data": {"url": "/Regional_Inequality/clustered_data.json"},
    "mark": "point",
    "width":600,
    "params": [
      {
        "name": "brush",
        "select": {
          "type": "interval",
          "resolve": "union",
          "on": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
          "translate": "[mousedown[event.shiftKey], window:mouseup] > window:mousemove!",
          "zoom": "wheel![event.shiftKey]"
        }
      },
      {
        "name": "grid",
        "select": {
          "type": "interval",
          "resolve": "global",
          "translate": "[mousedown[!event.shiftKey], window:mouseup] > window:mousemove!",
          "zoom": "wheel![!event.shiftKey]"
        },
        "bind": "scales"
      }
    ],
    "encoding": {
      "x": {"field": {"repeat": "column"}, "type": "quantitative", "axis":{"domain": true}},
      "y": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "axis": {"minExtent": 30}
      },
      "color": {
        "field":"cluster", "type" : "nominal"
      }
    }
  }
}
